{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "src/*": [
        "*"
      ]
    },
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2020",
    "types": [
      "node"
    ],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "eslint.config.mts"
  ]
}